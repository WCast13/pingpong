

<div class="top_bar">
<header>
  <ul class="nav nav-tabs nav-justified">
    <% if session[:player_id].nil? %>
    <li><%= link_to "login", '/login' %></li>
    <% else %>
      <li><%= link_to "logout", '/logout' %></li>
      <% end %>
    <li><%= link_to "Home", '/' %></li>
    <li><%= link_to "Standings", '/standings' %></li>
    <li><%= link_to "Submit Score", '/matches/new' %></li>
  </ul>
</header>
</div>

<div class="standings">
  <h1>Standings</h1>
</div>



<table class="table">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Win Percentage</th>
      <th>Points For</th>
      <th>Points Against</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each_with_index do |player, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= player.first_name + " " + player.last_name %></td>
        <td><%= player.wins %></td>
        <td><%= player.losses %></td>
        <td><%=player.win_percentage  %>%</td>
        <td><%= player.pf %></td>
        <td><%= player.pa %></td>
        <td type="button" class="button"><%= link_to 'Show Player', player %></td>
        <!-- <td><%= link_to 'Edit', edit_player_path(player) %></td> -->
        <!-- <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
