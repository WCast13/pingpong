<header>
  <ul class="nav nav-tabs nav-justified">
    <li><%= link_to "Home", '/' %></li>
    <li><%= link_to 'New Player', '/new' %></li>
    <li><%= link_to "Standings", '/standings' %></li>
    <li><%= link_to "Submit Score", '/matches/new' %></li>
  </ul>
</header>

<div class="standings">
  <h1>Standings</h1>
</div>


<table class="table">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Slack name</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Win Percentage</th>
      <th>Points For</th>
      <th>Points Against</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @players.each_with_index do |player, index| %>


      <tr>
        <td><%= index + 1 %></td>
        <td><%= player.name %></td>
        <td><%= player.slack_name %></td>
        <td><%= player.wins %></td>
        <td><%= player.losses %></td>
        <td><%= ((player.wins.to_f/(player.wins + player.losses)) * 100).round(2) %>%</td>
        <td><%= player.pf %></td>
        <td><%= player.pa %></td>
        <td type="button" class="button"><%= link_to 'Show Player', player %></td>
        <!-- <td><%= link_to 'Edit', edit_player_path(player) %></td> -->
        <!-- <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn btn-info">
<%= link_to 'New Player', '/new' %>
</button>
<button type="button" class="btn btn-info">
<%= link_to 'Home', '/' %>
</button>
<button type="button" class="btn btn-info">
<%= link_to 'Submit Score', '/matches/new' %>
</button>
