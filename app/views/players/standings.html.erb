<h1 class="jumbotron">Standings</h1>
<p id="notice"><%= notice %></p>



<table class="table">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Slack name</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Points For</th>
      <th>Points Against</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @players.each_with_index do |player, index| %>


      <tr>
        <td><%= index + 1 %></td>
        <td><%= player.name %></td>
        <td><%= player.slack_name %></td>
        <td><%= player.wins %></td>
        <td><%= player.losses %></td>
        <td><%= player.pf %></td>
        <td><%= player.pa %></td>
        <td><%= link_to 'Show', player %></td>
        <!-- <td><%= link_to 'Edit', edit_player_path(player) %></td> -->
        <!-- <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn btn-info">
<%= link_to 'New Player', '/new' %>
</button>
