<h1>Login</h1>
<h1><%= alert %></h1>
<%= form_tag '/login' do %>

  <div class="field">
    <%= label_tag :user_name %>
    <%= text_field_tag :user_name %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Login" %>

<% end %>
