<p id="notice"><%= notice %></p>

 <h1>Players</h1>

 <table class = "table">
   <thead>
    <tr>
       <th>Name</th>
       <th>user_name</th>
       <th>Wins</th>
       <th>Losses</th>
       <th>Points For</th>
       <th>Points Against</th>
       <th>League Name</th>
       <th>Ladder Position</th>
       <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
     <% @players.each do |player| %>
       <tr>
         <td><%= player.first_name + " " + player.last_name %></td>
         <td><%= player.user_name %></td>
         <td><%= player.wins %></td>
         <td><%= player.losses %></td>
         <td><%= player.pf %></td>
         <td><%= player.pa %></td>
         <td><%= player.league.league_name %></td>
         <td><%= player.standings_position %></td>
         <td><%= link_to 'Show', player %></td>
         <td><%= link_to 'Edit', edit_player_path(player) %></td>
         <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
     <% end %>
   </tbody>
 </table>

